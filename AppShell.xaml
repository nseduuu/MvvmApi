<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MVVM_API_SampleProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MVVM_API_SampleProject.Views"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        
        <ShellContent
        Title="ToDo"
        ContentTemplate="{DataTemplate local:ToDoView}"
        Route="ToDoView" />

        <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate local:PostView}"
        Route="PostView" />

    </TabBar>
    

</Shell>
